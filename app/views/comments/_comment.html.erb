
<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' ,remote: true do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% else %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>

    <br/>
    <span id="comment_<%= comment.id %>_votes"><%= comment.total_votes %> votes</span>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' ,remote: true do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% else %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <br/>
    <span class='quiet'>by</span> <%= link_to comment.user.username, user_path(comment.user) %>
    <small>at <%= comment.created_at %></small>
  </div>
</div>
